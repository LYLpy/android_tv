<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:visibility="gone"
    android:nextFocusDown="@id/view_data_null_go_button"
    android:id="@+id/fragment_data_empty_bg"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true">

    <ImageView
        android:src="@drawable/icon_data_null"
        android:layout_width="@dimen/sw_300dp"
        android:layout_height="@dimen/sw_280dp">
    </ImageView>
    <TextView

        android:text="当前没有任何信息哟~~~"
        android:textColor="@color/color_white"
        android:textStyle="bold"
        android:textSize="@dimen/sw_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <LinearLayout
        android:visibility="gone"

        android:layout_marginTop="@dimen/sw_10dp"
        android:id="@+id/view_data_null_go_button"
        style="@style/style_me_fragment_button_01"
        android:padding="@dimen/sw_10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="@dimen/sw_90dp"
        android:layout_height="@dimen/sw_40dp">
        <TextView
            android:textStyle="bold"
            android:textColor="@color/lb_action_text_color"
            android:text="去探险"
            android:textSize="@dimen/sw_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>