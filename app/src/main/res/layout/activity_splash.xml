<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/tv"
        android:text=""
        android:textColor="@color/color_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/sw_30dp"
        android:paddingRight="@dimen/sw_30dp"
        android:paddingTop="@dimen/sw_10dp"
        android:paddingBottom="@dimen/sw_10dp"
        android:focusable="true"
        android:textSize="@dimen/sw_30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/sw_30dp"
        android:layout_marginTop="@dimen/sw_40dp"
        android:background="@drawable/bg_oval_gray"/>

</RelativeLayout>