<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include
        layout="@layout/view_title_me_fragment"
        ></include>

    <LinearLayout
        android:background="@drawable/bg_me_fragment_color"
        android:paddingLeft="@dimen/sw_100dp"
        android:paddingRight="@dimen/sw_100dp"
        android:paddingTop="@dimen/sw_40dp"
        android:paddingBottom="@dimen/sw_50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/sw_12dp">

    <RelativeLayout
        android:layout_marginBottom="@dimen/sw_15dp"
        android:paddingLeft="@dimen/sw_45dp"
        android:paddingRight="@dimen/sw_45dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sw_100dp">
        <ImageView
            android:scaleType="fitXY"
            android:background="@drawable/icon_personal_information_tx"
            android:layout_marginRight="@dimen/sw_20dp"
            android:id="@+id/fragment_personal_information_img_head_portrait"
            android:layout_width="@dimen/sw_100dp"
            android:layout_height="@dimen/sw_100dp"></ImageView>
        <TextView
            android:textColor="@color/color_white"
            android:textSize="@dimen/sw_30dp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/sw_5dp"
            android:layout_above="@+id/fragment_personal_information_text_view_date"
            android:id="@+id/fragment_personal_information_text_name"
            android:layout_toRightOf="@+id/fragment_personal_information_img_head_portrait"
            android:text="鱼的水"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/color_me_fragment_text"
            android:layout_marginBottom="@dimen/sw_15dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/fragment_personal_information_text_view_date"
            android:layout_toRightOf="@+id/fragment_personal_information_img_head_portrait"
            android:text="VIP会员2020-10-10到期"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <LinearLayout
            android:layout_centerVertical="true"
            style="@style/style_me_fragment_layout"
            android:padding="@dimen/sw_10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:id="@+id/fragment_presonal_information_out_or_sign"
            android:layout_width="@dimen/sw_90dp"
            android:layout_height="@dimen/sw_40dp">
            <TextView
                android:id="@+id/fragment_presonal_information_out_or_sign_text"
                android:textStyle="bold"
                android:textColor="@color/color_me_fragment_text"
                android:text="返回"
                android:textSize="@dimen/sw_15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/sw_15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:visibility="gone"
            android:layout_marginRight="@dimen/sw_15dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/sw_25dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/shape_me_fragment_letter_wx_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="@dimen/sw_250dp"
                android:layout_height="@dimen/sw_170dp">
                <ImageView
                    android:src="@drawable/icon_wx"
                    android:layout_width="@dimen/sw_50dp"
                    android:layout_height="@dimen/sw_50dp">
                </ImageView>
                <TextView
                    android:layout_marginLeft="@dimen/sw_15dp"
                    android:layout_marginRight="@dimen/sw_15dp"
                    android:layout_marginTop="@dimen/sw_15dp"
                    android:id="@+id/fragment_presonal_information_text_wx_id"
                    android:textSize="@dimen/sw_18dp"
                    android:textColor="@color/color_white"
                    android:text="微信：未绑定"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
<!--            android:background="@drawable/shape_selector_no"-->

            <LinearLayout
                    android:id="@+id/fragment_personal_information_replace_wx"
                    style="@style/style_me_fragment_button_01"
                    android:layout_marginTop="@dimen/sw_25dp"
                    android:layout_width="@dimen/sw_250dp"
                    android:layout_height="@dimen/sw_45dp"
                    >
                    <TextView
                        android:gravity="center"
                        android:textSize="@dimen/sw_20dp"
                        android:textColor="@color/color_me_fragment_text"
                        android:text="去绑定"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="@dimen/sw_25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="@dimen/sw_15dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/shape_me_fragment_letter_phone_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="@dimen/sw_250dp"
                    android:layout_height="@dimen/sw_170dp">
                    <ImageView
                        android:src="@drawable/icon_mobile_phone"
                        android:layout_width="@dimen/sw_50dp"
                        android:layout_height="@dimen/sw_50dp">
                    </ImageView>

                    <TextView
                        android:layout_marginLeft="@dimen/sw_15dp"
                        android:layout_marginRight="@dimen/sw_15dp"
                        android:layout_marginTop="@dimen/sw_15dp"
                        android:id="@+id/fragment_presonal_information_text_phone"
                        android:textSize="@dimen/sw_18dp"
                        android:textColor="@color/color_white"
                        android:text="手机号：未绑定"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_personal_information_replace_phone"
                    style="@style/style_me_fragment_button_01"
                    android:layout_marginTop="@dimen/sw_25dp"
                    android:layout_width="@dimen/sw_250dp"
                    android:layout_height="@dimen/sw_45dp"
                    >
                    <TextView
                        android:gravity="center"
                        android:textSize="@dimen/sw_20dp"
                        android:textColor="@color/color_me_fragment_text"
                        android:text="更换"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    </LinearLayout>



</LinearLayout>