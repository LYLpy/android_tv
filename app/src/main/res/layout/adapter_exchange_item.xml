<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/sw_10dp"
    style="@style/style_me_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginBottom="@dimen/sw_15dp"
        android:layout_marginLeft="@dimen/sw_5dp"
        android:layout_marginRight="@dimen/sw_5dp"
        android:layout_marginTop="@dimen/sw_15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sw_90dp">
        <ImageView
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:id="@+id/adapter_exchange_img"
            android:layout_width="@dimen/sw_140dp"
            android:layout_height="match_parent"></ImageView>
        <RelativeLayout
            android:layout_toLeftOf="@+id/fragment_my_order_text_amount_of_money"
            android:layout_marginLeft="@dimen/sw_10dp"
            android:layout_toRightOf="@+id/adapter_exchange_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/fragment_exchange_success"
                android:textColor="@color/color_me_fragment_golden"
                android:textSize="@dimen/sw_18dp"
                android:textStyle="bold"
                android:text="兑换成功"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/fragment_exchange_text_naem"
                android:textColor="@color/color_me_fragment_text"
                android:textSize="@dimen/sw_18dp"
                android:textStyle="bold"
                android:text="VIP体验3天"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/adapter_exchange_time"
                android:text="2019-06-06 10:30"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sw_13dp"
                android:textColor="@color/color_normal_text_color"
                android:layout_height="wrap_content"></TextView>
        </RelativeLayout>


        <TextView
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sw_18dp"
            android:layout_alignParentRight="true"
            android:id="@+id/fragment_my_order_text_amount_of_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即使用"
            android:textStyle="bold"
            android:textColor="@color/color_white"/>



    </RelativeLayout>

</LinearLayout>