<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/sw_300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_pay_qr_code_left"
        android:gravity="center_horizontal">

    <TextView
        android:text="支付方式"
        android:textSize="@dimen/sw_30dp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/sw_45dp"
        android:textColor="@color/color_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ll_wechat_pay"
            android:layout_marginTop="@dimen/sw_18dp"
            style="@style/pay_way">
            <ImageView
                android:src="@drawable/ic_wechat_pay"
                style="@style/pay_way_iv"/>
            <TextView
                android:text="微信支付"
                style="@style/pay_tv"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_alipay"
            style="@style/pay_way">
            <ImageView
                android:src="@drawable/ic_alipay"
                style="@style/pay_way_iv"/>
            <TextView
                android:text="支付宝支付"
                style="@style/pay_tv"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_customer_service"
            style="@style/pay_way"
            android:background="@drawable/selector_cs_bg"
            android:layout_width="@dimen/sw_210dp"
            android:layout_marginTop="@dimen/sw_200dp">
            <ImageView
                android:id="@+id/iv_cs"
                android:src="@drawable/cs_normal"
                android:layout_width="@dimen/sw_27dp"
                android:layout_height="@dimen/sw_27dp"/>
            <TextView
                android:text="微信客服"
                android:textSize="@dimen/sw_27dp"
                style="@style/pay_tv"/>
        </LinearLayout>

    </LinearLayout>
    <!--===============左右分隔线==========================-->
    <LinearLayout
        android:layout_width="@dimen/sw_520dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_pay_qr_code_right">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sw_60dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/sw_30dp"
            android:paddingLeft="@dimen/sw_30dp"
            android:paddingRight="@dimen/sw_30dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_pay_amount"
                android:text="支付金额:"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sw_30dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_pay_price"
                android:text="0"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sw_39dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/sw_10dp"/>
            <TextView
                android:id="@+id/tv_price_unit"
                android:text="元"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sw_30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_meal_name"
            android:text="VIP"
            android:visibility="gone"
            android:textSize="@dimen/sw_30dp"
            android:textColor="@color/color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sw_10dp"/>
        <FrameLayout
            android:layout_width="@dimen/sw_360dp"
            android:layout_height="@dimen/sw_360dp"
            android:padding="@dimen/sw_6dp"
            android:background="@drawable/bg_qr_code"
            android:layout_marginTop="@dimen/sw_10dp">
            <ImageView
                android:id="@+id/iv_qr_code"
                android:background="@drawable/placeholder_course"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <TextView
            android:id="@+id/tv_tips"
            android:text="如遇到支付问题，请联系客服"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sw_20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sw_15dp"
            android:layout_marginBottom="@dimen/sw_30dp"/>

    </LinearLayout>
</LinearLayout>