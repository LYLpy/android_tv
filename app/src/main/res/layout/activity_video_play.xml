<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.universalvideoview.UniversalVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:uvv_fitXY="true"
        />
        <!--<VideoView-->
            <!--android:id="@+id/video_view"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:focusable="true"/>-->
        <com.universalvideoview.UniversalMediaController
            android:id="@+id/media_controller"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            app:uvv_scalable="true"/>
    <!--正在播放的视频名称-->
    <TextView
        android:id="@+id/tv_playing_video_name"
        android:text="正在播放："
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sw_25dp"
        android:paddingTop="@dimen/sw_30dp"
        android:paddingBottom="@dimen/sw_10dp"
        android:paddingLeft="@dimen/sw_30dp"
        android:background="@color/translucent_black"
        android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/rl_title_part"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sw_100dp"
            android:orientation="horizontal"
            android:paddingTop="@dimen/sw_30dp"
            android:visibility="gone"
            android:paddingLeft="@dimen/sw_30dp"
            android:background="@color/translucent_black">
            <!--课程名称-->
            <TextView
                android:id="@+id/tv_course_name"
                android:text="人教版小学语文上册"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sw_25dp"/>
            <!--视频名称-->
            <TextView
                android:id="@+id/tv_video_name"
                android:text="正在播放"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sw_15dp"
                android:layout_below="@+id/tv_course_name"
                android:layout_marginTop="@dimen/sw_10dp"/>
        <!--====================左右分隔线============================-->
            <LinearLayout
                android:id="@+id/ll_title_part_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/sw_30dp">
                <TextView
                    android:text="按下键"
                    android:textSize="@dimen/sw_25dp"
                    android:textColor="@color/color_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/pull_down"
                    android:layout_width="@dimen/sw_20dp"
                    android:layout_height="@dimen/sw_20dp"
                    android:layout_marginLeft="@dimen/sw_10dp"/>
                <TextView
                    android:text="选课"
                    android:textSize="@dimen/sw_25dp"
                    android:textColor="@color/color_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sw_10dp"/>
                <!--时间-->
                <TextView
                    android:id="@+id/tv_time"
                    android:textSize="@dimen/sw_25dp"
                    android:textColor="@color/color_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sw_30dp"/>
            </LinearLayout>

        </RelativeLayout>
    <!--即将播放-->
    <RelativeLayout
        android:id="@+id/rl_soon_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/tv_soon_play_name"
            android:text="即将播放"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sw_25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/sw_150dp"
            android:gravity="center"
            android:paddingTop="@dimen/sw_20dp">
            <TextView
                android:text="按下键"
                android:textSize="@dimen/sw_25dp"
                android:textColor="@color/color_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/pull_down"
                android:layout_width="@dimen/sw_20dp"
                android:layout_height="@dimen/sw_20dp"
                android:layout_marginLeft="@dimen/sw_10dp"/>
            <TextView
                android:text="选课"
                android:textSize="@dimen/sw_25dp"
                android:textColor="@color/color_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sw_10dp"/>
        </LinearLayout>
    </RelativeLayout>
<!--=============================以下是课程列表部分========================================-->
    <LinearLayout
        android:id="@+id/ll_course_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sw_280dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/sw_20dp"
        android:paddingRight="@dimen/sw_20dp"
        android:visibility="gone">

        <com.geling.view.gelingtv_XX_tongbu.ui.view.MyTvRecyclerView
            android:id="@+id/rv_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.geling.view.gelingtv_XX_tongbu.ui.view.MyTvRecyclerView
            android:id="@+id/rv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>