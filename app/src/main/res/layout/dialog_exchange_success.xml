<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_me_exchange_dialog"
    android:visibility="gone"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/icon_exchange_success"
            android:layout_width="@dimen/sw_220dp"
            android:layout_height="@dimen/sw_160dp">
        </ImageView>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/icon_exchange_success_check_mark"
            android:layout_width="@dimen/sw_28dp"
            android:layout_height="@dimen/sw_28dp"></ImageView>

        <TextView
            android:textColor="@color/color_white"
            android:textSize="@dimen/sw_20dp"
            android:text=" 恭喜您，兑换成功！"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/sw_10dp"
            android:id="@+id/fragment_me_exchange_dialog_text"
            android:textSize="@dimen/sw_12dp"
            android:textStyle="bold"
            android:text="兑换内容:  VIP会员体验7天"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/fragment_me_exchange_dialog_time"
            android:layout_marginTop="@dimen/sw_5dp"
            android:textSize="@dimen/sw_12dp"
            android:textStyle="bold"
            android:text="兑换时间:  2019.12.12  10:40:36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <LinearLayout
            android:layout_marginTop="@dimen/sw_10dp"
            android:id="@+id/dialog_exchange_success_return"
            style="@style/style_me_fragment_button_01"
            android:padding="@dimen/sw_10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="@dimen/sw_90dp"
            android:layout_height="@dimen/sw_40dp">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/lb_action_text_color"
                android:text="返回"
                android:textSize="@dimen/sw_15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
