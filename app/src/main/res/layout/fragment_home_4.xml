<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="@dimen/sw_home_content_margin_top"
              android:id="@+id/ll_root_view_home_4"
              android:layout_marginLeft="@dimen/sw_home_content_margin_left">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sw_366dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:background="@drawable/bg_border7_selector"
            android:id="@+id/ll_xbanner_home_parent_4"
            android:gravity="center"
            android:orientation="vertical"
            android:focusable="true"
            android:layout_width="@dimen/sw_592dp"
            android:layout_height="@dimen/sw_352dp"
            android:padding="@dimen/sw_4dp"
            android:layout_marginLeft="@dimen/sw_6dp"
            android:nextFocusLeft="@+id/ll_xbanner_home_parent_4"
            android:nextFocusRight="@id/siv1_home_4"
            android:nextFocusDown="@id/siv4_home_4">

            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/xbanner_home_4"
                android:overScrollMode="never"
                android:layout_width="@dimen/sw_584dp"
                android:layout_height="@dimen/sw_344dp"
                app:AutoPlayTime="3000"
                app:pointsContainerBackground="@color/color_21"
                app:pointsPosition="CENTER"
                app:tipTextColor="#FFFFFFFF"
                android:nextFocusRight="@id/siv1_home_4"
                android:nextFocusDown="@id/siv4_home_4"/>

        </LinearLayout>

        <com.geling.view.gelingtv_XX_tongbu.ui.view.ImageViewBgUtils
            android:id="@+id/siv1_home_4"
            style="@style/style_main_fragment_top_iv"
            android:layout_height="@dimen/sw_352dp"
            android:nextFocusRight="@id/siv2_home_4"
            android:layout_marginLeft="@dimen/sw_12dp"
            android:layout_marginTop="@dimen/sw_0dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/sw_300dp"
            android:layout_height="@dimen/sw_360dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/sw_8dp">

            <com.geling.view.gelingtv_XX_tongbu.ui.view.ImageViewBgUtils
                android:id="@+id/siv2_home_4"
                style="@style/style_main_fragment_top_iv"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/sw_0dp"
                android:nextFocusRight="@+id/siv2_home_4"/>

            <com.geling.view.gelingtv_XX_tongbu.ui.view.ImageViewBgUtils
                android:id="@+id/siv3_home_4"
                style="@style/style_main_fragment_top_iv"
                android:nextFocusRight="@id/siv3_home_4"
                android:layout_marginTop="@dimen/sw_12dp"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_main_rel_03_4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/sw_minus_14dp">

        <com.geling.view.gelingtv_XX_tongbu.ui.view.ImageViewBgUtils
            android:id="@+id/siv4_home_4"
            style="@style/style_main_fragment_top_iv"
            android:nextFocusLeft="@id/siv4_home_4"
            android:layout_marginLeft="@dimen/sw_5dp"/>

        <com.geling.view.gelingtv_XX_tongbu.ui.view.ImageViewBgUtils
            android:id="@+id/siv5_home_4"
            style="@style/style_main_fragment_top_iv"
            android:layout_marginLeft="@dimen/sw_12dp"/>
        <com.geling.view.gelingtv_XX_tongbu.ui.view.ImageViewBgUtils
            android:id="@+id/siv6_home_4"
            style="@style/style_main_fragment_top_iv"
            android:layout_marginLeft="@dimen/sw_12dp"/>

        <com.geling.view.gelingtv_XX_tongbu.ui.view.ImageViewBgUtils
            android:id="@+id/siv7_home_4"
            style="@style/style_main_fragment_top_iv"
            android:nextFocusRight="@+id/siv7_home_4"
            android:nextFocusUp="@id/siv3_home_4"
            android:layout_marginLeft="@dimen/sw_12dp"/>

    </LinearLayout>

</LinearLayout>