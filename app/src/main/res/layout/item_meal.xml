<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/sw_539dp"
              android:layout_height="@dimen/sw_111dp"
              android:layout_marginTop="@dimen/sw_3dp"
              android:layout_marginBottom="@dimen/sw_3dp"
                android:focusable="true"
                android:layout_marginLeft="@dimen/sw_45dp"
                android:layout_marginRight="@dimen/sw_48dp"
                android:paddingRight="@dimen/sw_24dp">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/bg_meal_normal"/>
    <ImageView
        android:id="@+id/iv_discount"
        android:layout_width="@dimen/sw_60dp"
        android:layout_height="@dimen/sw_60dp"
        android:scaleType="fitXY"
        android:src="@drawable/discount_mark"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/sw_15dp"
        android:layout_marginLeft="@dimen/sw_minus_15dp"
        android:layout_toRightOf="@+id/iv_discount">
        <TextView
            android:id="@+id/tv_goods_name"
            android:textColor="@color/gold_meal_name"
            android:textSize="@dimen/sw_39dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/sw_10dp"/>
        <TextView
            android:id="@+id/tv_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/sw_24dp"
            android:layout_marginTop="@dimen/sw_6dp"
            android:textColor="@color/gold_meal_average"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/sw_45dp">
        <!--价格-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rmb_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rmb_sign"
                android:textSize="@dimen/sw_30dp"
                android:textColor="@color/gold_meal_name"/>

            <TextView
                android:id="@+id/tv_price"
                android:textColor="@color/gold_meal_name"
                android:textSize="@dimen/sw_54dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textStyle="bold"
                android:lineSpacingExtra="@dimen/sw_1dp"/>

        </LinearLayout>
        <!--原价-->
        <TextView
            android:id="@+id/tv_ori_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/sw_24dp"
            android:textColor="@color/gold_meal_average"/>
    </LinearLayout>


</RelativeLayout>